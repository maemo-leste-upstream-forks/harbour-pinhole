#!/usr/bin/make -f
# -*- makefile -*-
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# These are used for cross-compiling and for saving the configure script
# from having to guess our platform (since we know it already)
DEB_HOST_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
           CFLAGS += -O0
else
           CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
           INSTALL_PROGRAM += -s
endif


%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- FLAVOR=kirigami

override_dh_install:
	install -D harbour-pinhole.svg debian/tmp/usr/share/icons/hicolor/scalable/apps/harbour-pinhole.svg
	install -D icons/86x86/harbour-pinhole.png debian/tmp/usr/share/icons/hicolor/86x86/apps/harbour-pinhole.png
	install -D icons/108x108/harbour-pinhole.png debian/tmp/usr/share/icons/hicolor/108x108/apps/harbour-pinhole.png
	install -D icons/128x128/harbour-pinhole.png debian/tmp/usr/share/icons/hicolor/128x128/apps/harbour-pinhole.png
	install -D icons/172x172/harbour-pinhole.png debian/tmp/usr/share/icons/hicolor/172x172/apps/harbour-pinhole.png
	dh_install
